<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NoRServer"
                   namespace="NoRServer.Model">
  <!--类名,表与表对应-->
  <class name ="CarPrice" table ="carprice">

    <!--组件之间的对应-->
    <!--组件标签  数据库表中列名  类型-->
    <id name ="CarName" column ="carname" type="String">
    </id>

    <!--组件用Id，其余的用Property-->
    <property name ="Price" column="price" type="Int32"/>

  </class>

</hibernate-mapping>