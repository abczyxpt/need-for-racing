<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="NoRServer"
                   namespace="NoRServer.Model">
  <!--类名,表与表对应-->
  <class name ="UserCar" table ="usercars">

    <!--组件之间的对应-->
    <!--组件标签  数据库表中列名  类型-->
    <id name ="UserId" column ="userid" type="Int32">
    </id>

    <!--组件用Id，其余的用Property-->
    <property name ="SportCar" column="sportcar" type="Boolean"/>

  </class>

</hibernate-mapping>